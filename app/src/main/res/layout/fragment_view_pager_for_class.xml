<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_color_for_view_pager"
    tools:context=".perks.ViewPagerForPerk">

    <TextView
        android:id="@+id/perk_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/pixel_operator"
        android:textColor="@color/purple_app_color"
        android:layout_margin="8dp"
        android:textSize="24sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/perk_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/pixel_operator"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/perk_name"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/perk_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="160dp"
        app:layout_constraintTop_toBottomOf="@id/perk_description"/>
  
</android.support.constraint.ConstraintLayout>