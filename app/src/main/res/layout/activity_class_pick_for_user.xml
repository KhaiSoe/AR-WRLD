<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space_home_bg"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/intro_for_choosing_class_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/pixel_operator_bold"
        android:text="@string/choose_hero_text"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/mainActivity_viewPager"
        app:layout_constraintStart_toStartOf="@id/mainActivity_viewPager"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v4.view.ViewPager
        android:id="@+id/mainActivity_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:background="@drawable/view_for_white_bg"
        app:layout_constraintTop_toBottomOf="@id/intro_for_choosing_class_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/circle_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:ci_drawable="@drawable/circle_indicator_custom"
        app:layout_constraintBottom_toBottomOf="@id/mainActivity_viewPager" />

</android.support.constraint.ConstraintLayout>